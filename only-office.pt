<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="icc.quest"
      metal:use-macro="main.macros['page']">
  <tal:block metal:fill-slot="header-meta">
    <link rel="stylesheet" href="/deform/css/form.css" type="text/css" />
    <style>
      /* Font Definitions */

    </style>
  </tal:block>
  <tal:block metal:fill-slot="content">
    <h1>Test OnlyOffice</h1>
    <div class="form">
        <div id="iframeEditor">
        </div>
    </div>
  </tal:block>
  <tal:black metal:fill-slot="script-src">

    <script type="text/javascript" src="http://iscnet.ru:8188/web-apps/apps/api/documents/api.js"></script>
    <script tal:define = "ooctx context.oocontext; doc ooctx.document">
      config = {
        "width": "100%",
        "height": "100%",
        "type": "desktop",
        "token": "",
        "document": {
          "fileType": "doc.ext",
          "key": "${ooctx.key}",
          "title": "${doc.title}",
          "url": "${doc.url}"
        },
        "documentType": "${doc.type}", // "text"
        "editorConfig": {
          "callbackUrl": "${ooctx.callback_url(request)}"
        }
      };
      var docEditor = new DocsAPI.DocEditor("iframeEditor", config);

      var fixSize = function () {
        var wrapEl = document.getElementsByClassName("form");
        if (wrapEl.length) {
          wrapEl[0].style.height = screen.availHeight + "px";
          window.scrollTo(0, -1);
          wrapEl[0].style.height = window.innerHeight + "px";
        }
      };

      if (window.addEventListener) {
        // window.addEventListener("load", connectEditor);
        window.addEventListener("resize", fixSize);
      } else if (window.attachEvent) {
        // window.attachEvent("onload", connectEditor);
        window.attachEvent("onresize", fixSize);
      }
      fixSize();
    </script>

  </tal:black>
</html>
